<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smoothiesolution"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.smoothiesolution.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.smoothiesolution.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.smoothiesolution.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.smoothiesolution.Recipes"
            android:label="@string/title_activity_recipes" >
        </activity>
        <activity
            android:name="com.example.smoothiesolution.Details"
            android:label="@string/title_activity_details" >
        </activity>
        <activity
            android:name="com.example.smoothiesolution.Categories"
            android:label="@string/title_activity_categories" >
        </activity>
        <activity
            android:name="com.example.smoothiesolution.Favorites"
            android:label="@string/title_activity_favorites" >
        </activity>
    </application>

</manifest>
